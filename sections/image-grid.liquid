      "label": "Remove the gap between the images?",
      "default": false
    },
    {
      "type": "image_picker",
      "id": "section_background_image",
      "label": "Section background image"
    },
    {
      "type": "color",
      "id": "section_background_color",
      "label": "Section background colour"
    },
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section heading"
    },
    {
      "type": "checkbox",
