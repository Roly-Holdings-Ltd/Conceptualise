{{ 'section-image-with-text-alt.css' | asset_url | stylesheet_tag }}

<div id="ImageWithTextAlt-{{ section.id }}" class="image-with-text-alt {% if section.settings.show_background %}image-with-text-alt--with-background{% endif %} {% if section.settings.increase_content_width %}image-with-text-alt--increased-content{% endif %}">
  <div class="image-with-text-alt__wrap page-width">
    <div class="image-with-text-alt__content {{ section.settings.content_order_desktop }} {{ section.settings.content_order_mobile }}">
    <div class="image-with-text-alt__content-image {% if section.settings.round_image %}image-with-text-alt__content-image--round{% endif %}">
      {%- if section.settings.image != blank -%}
        {{ section.settings.image | image_url: width: 1500 | image_tag:
          loading: 'lazy',
          width: section.settings.image.width,
          height: section.settings.image.width.height,
          sizes: section.settings.image.width,
          widths: '375, 550, 750, 1100, 1500',
          alt: section.settings.image.alt | escape
        }}
      {%- endif -%}
      {%- if section.settings.image_heading != blank -%}
        <p class="image-with-text-alt__image-heading">{{ section.settings.image_heading }}</p>
      {%- endif -%}
      {%- if section.settings.image_subheading != blank -%}
        <p id="ImageSubheading--{{ block.id }}" class="image-with-text-alt__image-subheading">{{ section.settings.image_subheading }}</p>
      {%- endif -%}
    </div>
    <div class="image-with-text-alt__content-text">
        {%- if section.settings.subheading != blank -%}
            <div class="image-with-text-alt__subheading">
                <p>{{ section.settings.subheading }}</p>
            </div>
        {%- endif -%}
        {%- if section.settings.heading != blank -%}
            <div class="image-with-text-alt__heading">
                <h2>{{ section.settings.heading }}</h2>
            </div>
            {%- endif -%}

        {%- if section.settings.text != blank -%}
        <div class="image-with-text-alt__text">
            {{ section.settings.text }}
        </div>
        {%- endif -%}
        
        {%- if section.settings.button_text != blank -%}
        <div class="image-with-text-alt__button">
            <a href="{{ section.settings.button_url }}" class="button">{{ section.settings.button_text }}</a>
        </div>
        {%- endif -%}
    </div>
    </div>
  </div>
</div>

<style>
#ImageWithTextAlt-{{ section.id }}.image-with-text-alt .image-with-text-alt__image-heading{
  font-size: {{ section.settings.image_heading_font_size_mobile }}px;
}
#ImageWithTextAlt-{{ section.id }}.image-with-text-alt .image-with-text-alt__image-subheading{
  font-size: {{ section.settings.image_subheading_font_size_mobile }}px;
}
#ImageWithTextAlt-{{ section.id }}.image-with-text-alt .image-with-text-alt__button a{
  font-size: {{ section.settings.button_font_size_mobile }}px;
}

#ImageWithTextAlt-{{ section.id }} .image-with-text-alt__content-text .image-with-text-alt__subheading p{
  font-size: {{ section.settings.content_subheading_font_size_mobile }}px;
}
#ImageWithTextAlt-{{ section.id }} .image-with-text-alt__content-text .image-with-text-alt__heading h2{
  font-size: {{ section.settings.content_heading_font_size_mobile }}px;
}
#ImageWithTextAlt-{{ section.id }} .image-with-text-alt__content-text .image-with-text-alt__text *,
#ImageWithTextAlt-{{ section.id }} .image-with-text-alt__content-text .image-with-text-alt__text {
  font-size: {{ section.settings.content_text_font_size_mobile }}px;
}
@media (min-width:750px) {
  #ImageWithTextAlt-{{ section.id }}.image-with-text-alt .image-with-text-alt__image-heading{
    font-size: {{ section.settings.image_heading_font_size_desktop }}px;
  }
  #ImageWithTextAlt-{{ section.id }}.image-with-text-alt .image-with-text-alt__image-subheading{
    font-size: {{ section.settings.image_subheading_font_size_desktop }}px;
  }
  #ImageWithTextAlt-{{ section.id }}.image-with-text-alt .image-with-text-alt__button a{
    font-size: {{ section.settings.button_font_size_desktop }}px;
  }
  #ImageWithTextAlt-{{ section.id }} .image-with-text-alt__content-text .image-with-text-alt__subheading p{
    font-size: {{ section.settings.content_subheading_font_size_desktop }}px;
  }
  #ImageWithTextAlt-{{ section.id }} .image-with-text-alt__content-text .image-with-text-alt__heading h2{
    font-size: {{ section.settings.content_heading_font_size_desktop }}px;
  }
  #ImageWithTextAlt-{{ section.id }} .image-with-text-alt__content-text .image-with-text-alt__text *,
  #ImageWithTextAlt-{{ section.id }} .image-with-text-alt__content-text .image-with-text-alt__text{
    font-size: {{ section.settings.content_text_font_size_desktop }}px;
  }
}
</style>

