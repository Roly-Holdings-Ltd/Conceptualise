{{ 'section-blog-head.css' | asset_url | stylesheet_tag }}

<div id="BlogHead-{{ section.id }}" class="blog-head">
  <div class="blog-head__wrap page-width">
    <div class="blog-head__content">
        {%- for block in section.blocks -%}
            {%- case block.type -%}
                {%- when 'title' -%}
                <div id="Block--{{ block.id }}" class="blog-head__title">
                    <h1>{{ block.settings.title }}</h1>
                </div>
                {%- when 'subtitle' -%}
                <div id="Block--{{ block.id }}" class="blog-head__subtitle">
                    <p>{{ block.settings.subtitle }}</p>
                </div>
            {%- endcase -%}
        {%- endfor -%}
    </div>
  </div>
</div>

{%- style -%}
{%- for block in section.blocks -%}
    {%- case block.type -%}
        {%- when 'title' -%}
            #BlogHead-{{ section.id }} #Block--{{ block.id }}.blog-head__title {
                padding-top: {{ block.settings.padding_top | times: 0.75 | round: 0 }}px;
                padding-bottom: {{ block.settings.padding_bottom | times: 0.75 | round: 0 }}px;
            }
            
            #BlogHead-{{ section.id }} #Block--{{ block.id }}.blog-head__title h1{
                color: {{ block.settings.title_color_light }};
                font-size: {{ block.settings.title_font_size_mobile }}px;
                font-weight: {{ block.settings.font_weight }};
            }
            body.theme-dark-mode #BlogHead-{{ section.id }} #Block--{{ block.id }}.blog-head__title h1{
                color: {{ block.settings.title_color_dark }};
            }

            @media (min-width:750px) {
                #BlogHead-{{ section.id }} #Block--{{ block.id }}.blog-head__title {
                    padding-top: {{ block.settings.padding_top }}px;
                    padding-bottom: {{ block.settings.padding_bottom }}px;
                }
                #BlogHead-{{ section.id }} #Block--{{ block.id }}.blog-head__title h1{
                    font-size: {{ block.settings.title_font_size_desktop }}px;
                }
            }

        {%- when 'subtitle' -%}
        #BlogHead-{{ section.id }} #Block--{{ block.id }}.blog-head__subtitle {
            padding-top: {{ block.settings.padding_top | times: 0.75 | round: 0 }}px;
            padding-bottom: {{ block.settings.padding_bottom | times: 0.75 | round: 0 }}px;
        }
        
        #BlogHead-{{ section.id }} #Block--{{ block.id }}.blog-head__subtitle p{
            color: {{ block.settings.subtitle_color_light }};
            font-size: {{ block.settings.subtitle_font_size_mobile }}px;
            font-weight: {{ block.settings.font_weight }};
        }
        body.theme-dark-mode #BlogHead-{{ section.id }} #Block--{{ block.id }}.blog-head__subtitle p{
            color: {{ block.settings.subtitle_color_dark }};
        }

        @media (min-width:750px) {
            #BlogHead-{{ section.id }} #Block--{{ block.id }}.blog-head__subtitle {
                padding-top: {{ block.settings.padding_top }}px;
                padding-bottom: {{ block.settings.padding_bottom }}px;
            }
            #BlogHead-{{ section.id }} #Block--{{ block.id }}.blog-head__subtitle p{
                font-size: {{ block.settings.subtitle_font_size_desktop }}px;
            }
        }
    {%- endcase -%}
{%- endfor -%}



{%- endstyle -%}


